@{
    ViewData["Title"] = "Mailing List - Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Security.Claims

@model IEnumerable<SonOfCodSeafood.Models.MailingList>

@if (User.Identity.IsAuthenticated)
{
    @foreach (var mailingList in Model)
    {
        <div>           
            <h3>Name: @Html.DisplayFor(modelItem => mailingList.UserName)</h3>
            <h4>Email: @Html.DisplayFor(modelItem => mailingList.UserEmail)</h4>         
        </div>
        <hr />
    }
}
else 
{
    <h1>Login to Edit Mailing List</h1>
}